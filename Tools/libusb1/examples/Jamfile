
# JAM style makefile for libusb 1.0

if $(NT) {

	if $(MSVCNT) {
		OS_HDRS = ../msvc ;
	}
}

# Link all utilities here with libicc
LINKLIBS = ../$(LIBUSB1NAME).lib ;		# Stub or full library

HDRS = .. $(OS_HDRS) ;

MainsFromSources lsusb.c  xusb.c ;

# This doesn't seem to be cross platform ?
#Main dpfp : dpfp.c dpfp_threaded.c ;

# So executables can find the .dll
if $(LIBUSB_IS_DLL) = true {
	File $(LIBUSB1NAME)$(SUFSHLIB) : ../libusb/$(LIBUSB1NAME)$(SUFSHLIB) ;
}

